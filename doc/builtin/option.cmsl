namespace cmake {
/** \brief The builtin option type.
 */
class option
{
public:
  /** \brief Constructor.
   *
   * Sets value to false.
   *
   * \param name The name of the option.
   * \param description The description to be initialized with.
   */
  option(string name, string description);

  /** \brief Constructor.
   *
   * Sets value to \p value.
   *
   * \param name The name of the option.
   * \param description The description to be initialized with.
   * \param value The value to be initialized with.
   */
  option(string name, string description, bool value);

  /** \brief Value getter.
   *
   * \return The option value.
   */
  bool value();
};
}
